{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "noImplicitUseStrict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "jsx": "react",
    "outDir": "build",
    "allowJs": true
  },
  "exclude": [
    "build",
    "node_modules",
    "webpack"
  ],
  "compileOnSave": true,
  "atom": {
    "rewriteTsconfig": true
  }
}
